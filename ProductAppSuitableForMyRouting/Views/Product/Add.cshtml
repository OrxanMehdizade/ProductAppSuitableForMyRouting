@model ProductAddViewModel

@{
    var categorys = ViewData["Categorys"] as List<Category> ?? new List<Category>();
}

<style>
    .btnAddDiv {
        width: 100%;
        text-align: center;
        padding: 30px;
    }

    .btnAddDiv::placeholder {
        width: 100%;
        text-align: center;
        padding: 30px;
    }
</style>

<h1>Add</h1>

<form asp-controller="Product" asp-action="Add" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Select Category:</label>
        <select asp-for="CategoryId" class="form-control" asp-items="new SelectList(categorys, nameof(Category.Id), nameof(Category.Name))">
            <option value="">Product Category types</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl">Upload Image</label>
        <input asp-for="ImageUrl" type="file" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="btnAddDiv">
        <button type="submit" class="btn btn-primary">Add Product</button>
        <a class="btn btn-primary" asp-area="" asp-controller="Product" asp-action="GetCategory">Exit</a>
    </div>
</form>
