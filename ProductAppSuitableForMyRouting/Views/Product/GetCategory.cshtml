@model List<Category>

<style>
    #Category-main-div {
        padding: 10px;
        position: relative;
    }

        #Category-main-div:hover {
            border: 2px solid;
            border-color: white white #007bff white;
            box-shadow: 0 0 10px rgba(0, 123, 255, 1);
        }

    .card-text {
        padding: 5px;
        text-align: center;
        margin: 10px auto;
        width: 10em;
    }

        .card-text:hover {
            border: 5px solid;
            border-color: white white #007bff white;
            box-shadow: 0 0 10px rgba(0, 123, 255, 1);
            margin-bottom: 10px;
        }

    .btnAddDiv {
        width: 100%;
        text-align: center;
        padding: 30px;
    }

    #btnAdd {
        width: 150px;
    }

</style>


<div class="d-flex  gap-2">
    @foreach (var item in Model)
    {
        <div class="card" id="Category-main-div">
            <img class="card-img-top" src="@item.ImageUrl" alt="image not available">
            <p class="card-text" onclick="location.href='@Url.Action("GetAll", "Product", new { categoryId = item.Id })'">@item.Name</p>
        </div>
    }
</div>
<div class="btnAddDiv"><a asp-controller="Product" asp-action="Add" id="btnAdd" class="btn btn-primary">Add</a></div>