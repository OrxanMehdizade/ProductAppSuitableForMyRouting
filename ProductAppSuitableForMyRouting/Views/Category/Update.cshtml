@model UpdateCategoryViewModel

<h2>Update Product</h2>


<style>
    .btnUpdateDiv {
        width: 100%;
        text-align: center;
        padding: 30px;
    }

</style>

<form asp-controller="Category" asp-action="Update" enctype="multipart/form-data" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>



    <div class="form-group">
        <label asp-for="ImageUrlCategory">Upload Image</label>
        <input asp-for="ImageUrlCategory" type="file" class="form-control" />
        <span asp-validation-for="ImageUrlCategory" class="text-danger"></span>
    </div>

    <div class="btnUpdateDiv">
        <button type="submit" class="btn btn-primary">Update Product</button>
        <a class="btn btn-primary" asp-area="" asp-controller="Category" asp-action="GetCategory">Exit</a>
    </div>
</form>
